{
	"extends": "@the-events-calendar/product-taskmaster/config/stylelint",
	"rules": {
		"property-no-unknown": [
			true, {
				"ignoreProperties": [
					"container-type",
					"container"
				]
			}
		],
		"at-rule-no-unknown": [
			true, {
				"ignoreAtRules": [
					"container",
					"mixin"
				]
			}
		]
	},
	"ignoreFiles": [
		"src/resources/postcss/utilities/**"
	]
}
