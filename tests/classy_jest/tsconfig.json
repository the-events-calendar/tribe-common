{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@tec/common/classy/*": ["../../src/resources/packages/classy/*"],
      "@tec/common/*": ["../../src/resources/packages/*"]
    }
  },
  "include": [
    "*.ts",
    "*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}