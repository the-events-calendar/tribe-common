#wp-admin-bar-promoter-admin-bar {

	a.ab-item {
		align-items: center;
		display: flex;
		flex-wrap: wrap;

		.promoter-admin-bar__icon {
			flex: none;
			height: 20px;
			margin-right: 5px;
			width: 20px;
		}

		.promoter-admin-bar__text {
			flex: none;
		}
	}

	&:focus,
	&:hover {

		.promoter-admin-bar__icon svg path {
			fill: #00b9eb;
		}
	}
}
