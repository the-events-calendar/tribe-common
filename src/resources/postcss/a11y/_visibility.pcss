.tribe-common,
.single-tribe_events,
.tec-events-admin-settings,
.tec-settings-form {

	/* -----------------------------------------------------------------------------
	 * Hide from screenreaders & browsers
	 * ----------------------------------------------------------------------------- */

	.tribe-common-a11y-hidden {

		@mixin hidden;
	}

	/* -----------------------------------------------------------------------------
	 * Hide from browsers & show for screenreaders
	 * ----------------------------------------------------------------------------- */

	.tribe-common-a11y-visual-hide {

		@mixin visually-hide;
	}

	/* -----------------------------------------------------------------------------
	 * Show for browsers & screenreaders
	 * ----------------------------------------------------------------------------- */

	.tribe-common-a11y-visual-show {

		@mixin visually-show;
	}

	/* --------------------------------------------------------------------------------------------
	 * Visually Hidden on smaller screens ( < 768px ) but keep accessible to screenreaders.
	 * Useful for things like:
	 * - truncating text on buttons that need to be narrower than the full text on smaller screens.
	 * -------------------------------------------------------------------------------------------- */

	.tec-visually-hidden-md {
		@mixin visually-hide;

		@media (--viewport-medium) {
			@mixin visually-show;
		}
	}
}
