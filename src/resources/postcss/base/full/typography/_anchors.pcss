.tribe-common {

	a {
		color: var(--color-text-primary);
		outline: 0;
		text-decoration: none;

		&:hover,
		&:focus,
		&:active,
		&:visited {
			color: var(--color-text-primary);
			outline: 0;
			text-decoration: none;
		}
	}

	/* -------------------------------------------------------------------------
	 *
	 * Anchor: Theme Overrides
	 *
	 * ------------------------------------------------------------------------- */

	a {
		/* -------------------------------------------------------------------------
		 * Theme Overrides - Twenty Nineteen
		 * ------------------------------------------------------------------------- */

		.tribe-theme-twentynineteen &,
		.tribe-theme-twentynineteen .entry & {
			text-decoration: none;
		}

		/* -------------------------------------------------------------------------
		 * Theme Overrides - Twenty Twentyone
		 * ------------------------------------------------------------------------- */

		.tribe-theme-twentytwentyone &,
		.tribe-theme-twentytwentyone .entry & {
			text-decoration: none;
		}

		/* -------------------------------------------------------------------------
		 * Theme Overrides - Enfold
		 * ------------------------------------------------------------------------- */

		.tribe-theme-enfold &,
		.main_color .sidebar & {
			color: var(--color-text-primary);

			&:hover,
			&:focus,
			&:active,
			&:visited {
				color: var(--color-text-primary);
			}
		}
	}

	/* -------------------------------------------------------------------------
	 *
	 * Anchor
	 *
	 * Example:
	 * <a class="tribe-common-anchor">Anchor Text</a>
	 * <a class="tribe-common-anchor-alt">Anchor Alt Text</a>
	 * <a class="tribe-common-anchor-thin">Anchor Thin Text</a>
	 *
	 * ------------------------------------------------------------------------- */

	.tribe-common-anchor {
		@mixin anchor-default;
	}

	.tribe-common-anchor-alt {
		@mixin anchor-alt;
	}

	.tribe-common-anchor-thin {
		@mixin anchor-thin;
	}

	.tribe-common-anchor-thin-alt {
		@mixin anchor-thin-alt;
	}
}
