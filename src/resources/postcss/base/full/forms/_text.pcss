.tribe-common {
	/* -----------------------------------------------------------------------------
	 *
	 * Form Control: Text
	 *
	 * Example:
	 * <div class="tribe-common-form-control-text">
	 *   <label class="tribe-common-form-control-text__label" for="textInput">Text Input</label>
	 *   <input
	 *     class="tribe-common-form-control-text__input"
	 *     id="textInput"
	 *     name="textInput"
	 *     type="text"
	 *     placeholder="Text Input"
	 *   />
	 * </div>
	 *
	 * ----------------------------------------------------------------------------- */

	.tribe-common-form-control-text__input {
		@mixin desktop-body-1;

		border: 0;
		border-bottom: 1px solid var(--tec-color-border-default);

		.tribe-common--breakpoint-medium& {
			@mixin desktop-body-2;

			border: 0;
		}

		&::placeholder {
			color: var(--tec-color-text-secondary);
			font-style: normal;
			opacity: var(--tec-opacity-default);
		}

		&:focus {
			border-bottom-color: var(--tec-color-border-active);
		}
	}

	/* -----------------------------------------------------------------------------
	 *
	 * Form Control: Text Theme Overrides
	 *
	 * ----------------------------------------------------------------------------- */

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Twenty Seventeen
	 * ------------------------------------------------------------------------- */

	.tribe-theme-twentyseventeen & {

		.tribe-common-form-control-text__input {
			color: var(--tec-color-text-primary);
		}
	}

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Twenty Twenty
	 * ------------------------------------------------------------------------- */

	.tribe-theme-twentytwenty & {

		.tribe-common-form-control-text__input {
			line-height: inherit;
		}
	}

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Enfold
	 * ------------------------------------------------------------------------- */

	#top.tribe-theme-enfold &,
	#top .main_color & {

		.tribe-common-form-control-text__input {
			@mixin desktop-body-1;

			background: var(--tec-color-background);
			border: 0;
			border-bottom: 1px solid var(--tec-color-border-default);

			&:focus {
				border-bottom-color: var(--tec-color-border-active);
				box-shadow: none;
			}
		}

		&.tribe-common--breakpoint-medium .tribe-common-form-control-text__input {
			@mixin desktop-body-2;

			border: 0;
		}
	}
}
